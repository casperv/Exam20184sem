<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/PropertyAnimationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:onClick="skiftSide"
        android:text="@string/Property_Animation"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="59dp" />


    <Button
        android:id="@+id/DrawAbleAnimationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:onClick="skiftSideDrawable"
        android:text="@string/DrawAbleAnimation"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="59dp" />

</RelativeLayout>